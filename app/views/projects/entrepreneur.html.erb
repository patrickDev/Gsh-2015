<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Project</th>
    <th class="center">Goal</th>
    <th class="center">Raised</th>
    <th class="center">Action</th>
  </tr>
      <% @projects.each do |project| %>
    <tr>
      <td> <%= image_tag project.image.url(:thumb)%></td>
      <td><%= project.project_type %></td>
      <td><%= number_to_currency(project.amount)%></td>
      <td><%= number_to_currency(project.raised) %></td>
       <td> 
        <div class="btn-group">
           <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
           </button>
          <ul class="dropdown-menu" role="menu">
            <li> <%= link_to "View", project, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_project_path(project), class: "btn btn-link" %></li>
          <!--  <li><%= link_to 'Destroy', project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li> -->
          </ul>
        </div>        
       </td>
    </tr>
    <% end %>
</table>

 