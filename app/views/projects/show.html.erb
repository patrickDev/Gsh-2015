<div class="container-fluid">
  <div class="row">
      <div class="col-md-6">
          <div class="thumbnail">
            <%= image_tag @project.image.url %>        
          </div>
           <div>
             <ul>
                <li id="menu_documents"><a href="#">Documents</a></li>
                <li id="menu_forum" class="selected"><a href="#" class="selected">Forum</a></li>
                <li id="menu_events"><a href="#">Events</a></li>
              </ul>

          </div>   
    </div>
    <div class="col-md-6">
      <h3 class="content"> <%= @project.project_type %></h3>
        <table class="table">
          <tr class="danger">
            <td>Amount needed</td>
            <td><%= number_to_currency(@project.amount) %></td> 
          </tr>
          <tr class="warning">
            <td>Region</td>
            <td><%= @project.region %></td> 
          </tr>
          <tr class="warning">
            <td>Country</td>
            <td><%= @project.country %></td> 
          </tr>
           <tr class="warning">
            <td>Organization name</td>
            <td><%= @project.organization_name %></td> 
          </tr>
          <tr class="warning">
            <td>Organization type</td>
            <td><%= @project.organization_type %> </td> 
          </tr>
           <tr class="warning">
            <td>Leader name</td>
            <td><%= @project.leader_name %></td> 
          </tr>
           <tr class="warning">
            <td>Project description</td>
            <td><%= @project.description %></td> 
          </tr>
           <tr class="warning">
            <td>Impact people</td>
            <td><%= @project.impact_people %></td> 
          </tr>
           <tr class="warning">
            <td>Technical assistance</td>
            <td><%= @project.technical_assistance %></td> 
          </tr>
           <tr class="success">
            <td>Amound raised</td>
            <td><%= number_to_currency(@project.raised) %></td> 
          </tr>
        </table>
        <div class="center">
            <%= link_to " Donate Now ", projects_path, class: "btn btn-warning btn-lg"%>
          </div>   
     </div>
  </div>
</div>
<div class="container">
<% if current_user == @project.user  %>
  <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', projects_path, class: "btn btn-link" %>
</div>